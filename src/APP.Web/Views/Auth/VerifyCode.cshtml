@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Verify Login";
}

<div class="login-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-6">
               
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="login-form">
                    <div id="slide">
                        <div class="sm-12 col-md-12">
                            <h3>Confirmation code sent !</h3>
                            <p>Please enter the confirmation code that was sent to your email.</p>
                        </div>
                        <form action="" method="post">
                            <div class="col-sm-12 col-md-8">
                                <!--<label>Code</label>-->
                                <input type="text" class="confirm-code" name="token" placeholder="Code" />
                            </div>
                            <div class="col-sm-12 col-md-8">
                                <button type="submit" class="btn-primary btn-signin">CONFIRM</button>
                            </div>
                            <div class="col-sm-6 col-md-8">
                                <button type="button" class="btn btn-link btn-password">Need a new confirmation code?</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>